source 'https://rubygems.org'


# version of rails to use.
gem 'rails', '4.2.0'

# postgresql database.
gem 'pg'


# assets group and defaults.
gem 'uglifier', '>= 1.3.0'
gem 'therubyracer', platforms: :ruby
gem 'jquery-rails'
gem 'jbuilder', '~> 2.0'

gem 'angularjs-rails'
gem 'angular-rails-templates'
gem 'less-rails'
gem 'twitter-bootstrap-rails'
gem 'font-awesome-rails'

gem 'angular_rails_csrf'
gem 'js-routes'


group :doc do
	gem 'sdoc', '~> 0.4.0'
end


group :production do
	gem 'unicorn'
end


group :test do
	gem 'rspec-rails'
	gem 'capybara'
	gem 'selenium-webdriver'
end


group :development, :test do
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

